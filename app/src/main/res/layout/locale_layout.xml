<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/bonin"
            android:id="@+id/imageViewLocale"
            android:layout_height="160dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/layoutScroll"
            android:layout_below="@id/imageViewLocale"
            android:background="#8a868686">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/bonin"
                    android:id="@+id/imageView40" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/bonin"
                    android:id="@+id/imageView41"
                    android:layout_toRightOf="@+id/imageView40"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/bonin"
                    android:id="@+id/imageView43"
                    android:layout_toRightOf="@+id/imageView41"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/bonin"
                    android:id="@+id/imageView45" />


            </RelativeLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutNome"
            android:layout_below="@id/layoutScroll"
            android:padding="10dp">

            <ImageButton
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/btn_star"
                android:id="@+id/imageButton"
                android:layout_width="30dp"
                android:padding="10dp"
                android:background="#00000000"/>

            <TextView
                android:text="Locale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp"
                android:id="@+id/textViewNomeLocale"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/stat_sys_phone_call"
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:padding="10dp" />

            <ImageButton
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/ic_menu_compass"
                android:id="@+id/imageButton3"
                android:layout_width="30dp"
                android:padding="5dp"
                android:background="#00000000"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutDescrizione"
            android:layout_below="@id/layoutNome">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutInfo"
            android:layout_below="@id/layoutDescrizione">

            <TextView
                android:text="Info"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IndirizzoLocale">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_radio"
                    android:id="@+id/imageView3" />

                <TextView
                    android:text="Indirizzo"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/TelefonoLocale">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_radio"
                    android:id="@+id/imageView4" />

                <TextView
                    android:text="Telefono"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/EmailLocale">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_radio"
                    android:id="@+id/imageView5" />

                <TextView
                    android:text="Mail"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/SitoLocale">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_radio"
                    android:id="@+id/imageView6" />

                <TextView
                    android:text="Sito"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>